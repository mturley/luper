<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text='"Where should I put this?"'
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/welcomesub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text='"uhh... just make another button"'
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomesub"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="testRestAPI"
        android:text="@string/button_dbtest" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="startRecording"
        android:text="@string/button_record" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="dropAllData"
        android:text="Erase All SQLite Data" />
    
    
     <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="dragTest"
        android:text="DragTest" />

    <TextView
        android:id="@+id/bytheway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Dummy Project isn't a thing anymore, go make and open a real project to use the ProjectEditorActivity."
        android:textAppearance="?android:attr/textAppearanceSmall" android:layout_alignLeft="@+id/welcome"
        android:layout_alignRight="@+id/welcome"/>

</RelativeLayout>