        <activity android:name="com.teamluper.luper.PopupTest" android:label="TESTME" android:parentActivityName="com.teamluper.luper.LuperApp_"></activity>
        <activity android:name="com.teamluper.luper.CanvasTest" android:label="Canvas" android:parentActivityName="com.teamluper.luper.LuperApp_"></activity>
        <activity
            android:name="com.teamluper.luper.FileSelector"
            android:label="FileSelector" >
